# show default bottom right
alias screencast-webcam='mplayer -cache 128 -tv driver=v4l2:width=320:height=240 -vo xv tv:// -noborder -geometry "95%:80%" -ontop'

# show top right
alias screencast-webcam-tr='mplayer -cache 128 -tv driver=v4l2:width=320:height=240 -vo xv tv:// -noborder -geometry "95%:20%" -ontop'

# show top left
alias screencast-webcam-tl='mplayer -cache 128 -tv driver=v4l2:width=320:height=240 -vo xv tv:// -noborder -geometry "5%:20%" -ontop'

# show center left
alias screencast-webcam-cl='mplayer -cache 128 -tv driver=v4l2:width=320:height=240 -vo xv tv:// -noborder -geometry "5%:50%" -ontop'

# show center right
alias screencast-webcam-cr='mplayer -cache 128 -tv driver=v4l2:width=320:height=240 -vo xv tv:// -noborder -geometry "95%:50%" -ontop'

# show bottom left
alias screencast-webcam-bl='mplayer -cache 128 -tv driver=v4l2:width=320:height=240 -vo xv tv:// -noborder -geometry "5%:80%" -ontop'

# show bottom right
alias screencast-webcam-br='mplayer -cache 128 -tv driver=v4l2:width=320:height=240 -vo xv tv:// -noborder -geometry "95%:80%" -ontop'


